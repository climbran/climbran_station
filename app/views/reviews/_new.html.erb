<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@review) do |f| %>
        <%= render 'shared/error_messages',object: f.object %>

        <%= f.label :user, "用户名" %>
        <%= f.text_field :user %>

        <%= f.label :content, "回复内容" %>
        <%= f.text_area :content %>

        <%= hidden_field_tag :article_id, @article.id %>
        <%= f.submit "回复", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>