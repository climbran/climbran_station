<% provide(:title, "新文章") %>
<h1>新文章</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@article) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :title, "标题" %>
        <%= f.text_field :title %>

        <%= f.label :genre_id, "文章分类" %>
        <%= f.select :genre_id, @genres.map {|u| [ u.name, u.id]}%>

        <%= f.label :content, "输入文章内容" %>
        <%= f.text_area :content %>

        <%= f.submit "发表", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
